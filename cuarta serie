cuarta serie 
#include <iostream>

int sumarDigitos(int numero) {
    int suma = 0;
    while (numero > 0) {
        suma += numero % 10;
        numero /= 10;
    }
    return suma;
}

int main() {
    int numero;
    std::cout << "Introduce un nÃºmero entero: ";
    std::cin >> numero;
    std::cout << "La suma de los dÃ­gitos en " << numero << " es: " << sumarDigitos(numero) << std::endl;
    return 0;
}
